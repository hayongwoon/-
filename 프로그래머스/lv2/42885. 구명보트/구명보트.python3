from collections import deque


def solution(people, limit):
    people.sort()
    q = deque(people)
    answer = 0
    while q:
        if len(q) >= 2 and q[-1] + q[0] <= limit:
            q.pop()
            q.popleft()
            answer += 1
        else:
            q.pop()
            answer += 1
    
    return answer